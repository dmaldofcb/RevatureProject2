@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <style>
       section {
            background-color:white;
        }
    </style>
</head>


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <section><input asp-for="Input.Email" class="form-control" /></section>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <section><input asp-for="Input.Password" class="form-control" /></section>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
</div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <section><input asp-for="Input.ConfirmPassword" class="form-control" /></section>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FirstName" class="text-light"></label>
                <section><input asp-for="Input.FirstName" class="form-control" /></section>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <section><input asp-for="Input.LastName" class="form-control" /></section>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <section><input asp-for="Input.PhoneNumber" class="form-control" /></section>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Street"></label>
                <section><input asp-for="Input.Street" class="form-control" /></section>
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.City"></label>
                <section><input asp-for="Input.City" class="form-control" /></section>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.State"></label>
                <section><input asp-for="Input.State" class="form-control" /></section>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary" style="background-color:white">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
