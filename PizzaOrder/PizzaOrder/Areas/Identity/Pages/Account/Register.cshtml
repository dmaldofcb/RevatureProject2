@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <style>
        section {
            background-color: black;
            color: white;
        }
    </style>
</head>
<center>

    <h1 style="color:black">@ViewData["Title"]</h1>
    <h4 style="color:black">Create a new account.</h4>
</center>

<section class="ftco-section" style="background-image: url(../Images/bg_4.jpg);">
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-md-1"></div>
            <div class="col-md-10 ftco-animate">

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="contact-form">
                    <div class="row">
                        <div class="col-md-6">
                            <section><input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" /></section>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.FirstName" class="form-control" placeholder="First Name" /></section>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.Password" class="form-control" placeholder="Password" /></section>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.LastName" class="form-control" placeholder="Last Name" /></section>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" /></section>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" /></section>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.Street" class="form-control" placeholder="Street" /></section>
                            <span asp-validation-for="Input.Street" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.City" class="form-control" placeholder="City" /></section>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <section><input asp-for="Input.State" class="form-control" placeholder="State" /></section>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                    </div>
                    <br>
                    <div class="form-group" align="center">
                        <button type="submit" class="btn btn-primary py-3 px-5">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/PizzaJS/jquery.min.js"></script>
    <script src="~/js/PizzaJS/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/PizzaJS/popper.min.js"></script>
    <script src="~/js/PizzaJS/bootstrap.min.js"></script>
    <script src="~/js/PizzaJS/jquery.easing.1.3.js"></script>
    <script src="~/js/PizzaJS/jquery.waypoints.min.js"></script>
    <script src="~/js/PizzaJS/jquery.stellar.min.js"></script>
    <script src="~/js/PizzaJS/owl.carousel.min.js"></script>
    <script src="~/js/PizzaJS/jquery.magnific-popup.min.js"></script>
    <script src="~/js/PizzaJS/aos.js"></script>
    <script src="~/js/PizzaJS/jquery.animateNumber.min.js"></script>
    <script src="~/js/PizzaJS/bootstrap-datepicker.js"></script>
    <script src="~/js/PizzaJS/jquery.timepicker.min.js"></script>
    <script src="~/js/PizzaJS/scrollax.min.js"></script>
    <script src="~/js/PizzaJS/main.js"></script>
}
