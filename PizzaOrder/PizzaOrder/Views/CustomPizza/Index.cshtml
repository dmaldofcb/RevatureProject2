@using Microsoft.AspNetCore.Identity
@using Layers.Models.Models;
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Customize your pizza</h1>

<p>Choose your pizza size.</p>

<select name="SelectSize" id="size" class="mdb-select md-form">
    <option value="" disabled selected>Select Your Size</option>
    <option value="1" style="color:blue">Small</option>
    <option value="2" style="color:blue">Medium</option>
    <option value="3" style="color:blue">Large</option>
</select>
<br />
<p>Choose your pizza crust.</p>
<select name="SelectCrust" id="crust" class="mdb-select md-form">
    <option value="" disabled selected>Select Your Crust</option>
    <option value="1" style="color:blue">Thin Crust</option>
    <option value="2" style="color:blue">Thick Crust</option>
    <option value="3" style="color:blue">Stuffed Crust</option>
</select>
<br />
<p>Choose your pizza toppings.</p>
<input type="checkbox" name="toppings" value="1" />Pepperoni
<br />
<input type="checkbox" name="toppings" value="2" />Sausage
<br />
<input type="checkbox" name="toppings" value="3" />Pineapple
<br />
<input type="checkbox" name="toppings" value="4" />Green Peppers
<br />
<input type="checkbox" name="toppings" value="5" />Red Peppers
<br />
<input type="checkbox" name="toppings" value="6" />Ham
<br />
<input type="checkbox" name="toppings" value="7" />Onions
<br />
<input type="checkbox" name="toppings" value="8" />Mushrooms
<br />
<input type="checkbox" name="toppings" value="9" />Black Olives
<br />
<input type="checkbox" name="toppings" value="10" />Chicken
<br />
<input type="checkbox" name="toppings" value="11" />Buffalo Chicken
<br />
<input type="checkbox" name="toppings" value="12" />Broccoli
<br />
<input type="checkbox" name="toppings" value="13" />Tomatoes
<br />
<input type="checkbox" name="toppings" value="14" />Spinach
<br />
<input type="checkbox" name="toppings" value="15" />Bacon
<br />
<input type="checkbox" name="toppings" value="16" />Meatballs
<br />

@if (SignInManager.IsSignedIn(User))
{
    <button type="submit" class="=btn btn-primary" onclick="AddToCart()">Add to Cart</button>
}
else
{
    <button type="submit" class="=btn btn-primary" disabled="true">Add to Cart</button>
}

